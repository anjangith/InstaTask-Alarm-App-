<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="anjanproduction.com.projectxyz.com.reminder.todolist.projectxyz.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"


        android:layout_width="match_parent"

        android:layout_height="50dp"


        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"></android.support.v7.widget.Toolbar>

    <ListView
        android:id="@+id/mylistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:animateLayoutChanges="true">

    </ListView>

    <TextView
        android:id="@+id/emptyElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:paddingTop="150dp"
        android:text="PRESS THE ALARM BUTTON TO ADD A NEW TASK"
        android:textAlignment="center"
        android:textColor="@color/light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-1836307550568566/7429644523">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
